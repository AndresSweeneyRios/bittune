{
  "compilerOptions": {
    "checkJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "baseUrl": ".",
    "sourceMap": true,
    "lib": ["DOM", "ES2020", "WebWorker", "WebWorker.ImportScripts"],
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "skipLibCheck": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "src/index.ts", 
    "src/shims.d.ts",
  ],
}
